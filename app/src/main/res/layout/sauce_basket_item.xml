<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="start"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/basket_sauce_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/bullet" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/basket_sauce_title"
        android:text="@string/report_as_a_bug"
        android:layout_toEndOf="@+id/basket_sauce_bullet"
        android:layout_toRightOf="@+id/basket_sauce_bullet"
        android:layout_toStartOf="@+id/basket_sauce_price"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/basket_sauce_price" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basket_sauce_price"
        android:text="@string/report_as_a_bug"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>