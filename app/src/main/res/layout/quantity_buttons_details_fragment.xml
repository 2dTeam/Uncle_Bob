<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/item_details_buy"
        android:background="@color/colorAccent"
        android:id="@+id/quantity_widget_button_buy" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="4"
        android:text="-"
        android:background="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/quantity_widget_button_decrease"
        android:visibility="gone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:inputType="number"
        android:background="#FFFFFF"
        android:id="@+id/quantity_widget_text_quantity"
        android:visibility="gone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="4"
        android:text="+"
        android:background="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:id="@+id/quantity_widget_button_increase"
        android:visibility="gone"/>

</LinearLayout>